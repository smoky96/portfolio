{
  "name": "portfolio-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "build": "tsc -b && vite build",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:e2e:allocation": "playwright test e2e/allocation.spec.ts",
    "test:e2e:transactions": "playwright test e2e/transactions.spec.ts",
    "test:e2e:holdings": "playwright test e2e/holdings.spec.ts",
    "test:e2e:regression": "npm run test:e2e:smoke && npm run test:e2e:allocation && npm run test:e2e:holdings && npm run test:e2e:transactions",
    "test:e2e": "npm run test:e2e:regression",
    "test:e2e:mobile": "playwright test --grep @mobile --project mobile-chromium"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "antd": "^5.27.1",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  }
}
